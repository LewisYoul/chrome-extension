{
  "manifest_version": 2,

  "name": "Longest Word Fact",
  "description": "An extension that gives you an interesting fact about the longest word on the page",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "css": ["src/app.css"],
    "js": ["src/jquery-3.3.1.min.js", "src/Content.js", "src/Index.js"],
    "matches": ["<all_urls>"]
  }]
}
