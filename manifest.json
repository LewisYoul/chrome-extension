{
  "manifest_version": 2,

  "name": "Longest Word Fact",
  "description": "An extension that gives you an interesting fact about the longest word on the page",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["<all_urls>"]
  }]
}
